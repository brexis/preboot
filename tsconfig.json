{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ""
  },
  "include": [
    "src",
    "test",
    "record.ts",
    "replay.ts",
    "browser.ts",
    "server.ts"
  ]
}
